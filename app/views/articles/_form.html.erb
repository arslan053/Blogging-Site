<% if @article.errors.any?  %>
        <h3>Cannot create: Errors</h3>
        <ul>
        <% @article.errors.full_messages.each do |msg|%>
           <li> <%= msg %></li>
        <% end %>
        </ul> 
    <% end %>
<%= form_with(model: @article, local: true) do |f| %> <!--#Post request http not remote ,form_with by deafault http -->
    <p>
        <%= f.label :title %></br>
        <%= f.text_field :title%>
    </p>
    <p>
        <%= f.label :description %> </br>
        <%= f.text_area :description%>
    </p>
    <p>
        <%= f.submit %> </br>
    </p>        
 


    <% end %>