<div class="container"> 
  <%= render 'shared/error' %>
  <h4 class="mb-sm-4 ml-sm-2">Article Detail</h4>
  <div class="staric  ">
    <%= form_with(model: @article, class:"form-margin shadow p-3 mb-5 bg-light rounded " ,local: true) do |f| %>
      <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :title, class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control " %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :description, class: " col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 10, class: "form-control " %>
        </div>
      </div>
      <div class="row">
        <div class="col-9 "></div>
        <%= f.submit class: "btn btn-lg btn-outline-dark ml-sm-5 mt-sm-4"%><br>
      </div>
    <% end %>
    <div class="text-center mb-sm-3">
      <%=link_to "[Return to articles]", articles_path, class:"mt-5" %>
    </div>
  </section>
</div>





