<h1 class="text-center mt-4">Articles listing page</h1>\

<% @articles.each do |art| %>
    <div class="container ">
        <div class="row justify-content-md-center mt-4">
            <div class="col-8">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    @Arslan
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%= link_to art.title, article_path(art ),class:"text-warning" %></h5>
                    <p class="card-text"><%=truncate(art.description, length: 100)%></p>
                    <%= link_to 'Show', article_path(art),  class:"btn btn-outline-success my-2 my-sm-0", id:"search-hover"%>
                    <%= link_to 'Edit', edit_article_path(art), class:"btn btn-outline-success my-2 my-sm-0", id:"search-hover"%>
                </div>
                <div class="card-footer text-muted ">
                    <small><p>posted @ days ago &nbsp; &nbsp; &nbsp;Updated at @</p></small>
                    <%= link_to 'Delete', article_path(art), method: :delete, class:"btn btn-outline-danger "%>
                </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
