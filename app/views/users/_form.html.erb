<div class="container"> 
  <%= render 'shared/error', obj: @user %>
  <div class="staric  ">
    <%= form_with(model: @user, class:"form-margin shadow p-3 mb-3 mt-4 bg-light rounded " ,local: true) do |f| %>
      <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :username, class: "col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :username, class: "form-control " %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-2">
          <%= f.label :email, class: " col-form-label" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, rows: 10, class: "form-control " %>
        </div>
      </div>

      <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :password, class: " col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password,  class: "form-control " %>
      </div>
    </div>

      <div class="row">
        <div class="col-9 "></div>
        <%= f.submit class: "btn btn-lg btn-outline-dark ml-sm-5 mt-sm-4"%><br>
      </div>
    <% end %>
    <div class="text-center mb-sm-3">
      <%=link_to "[Return to articles]", articles_path, class:"mt-5" %>
    </div>
  </section>
</div>