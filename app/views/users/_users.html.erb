<% obj.each do |user| %>
    <div class="container ">
        <div class="row justify-content-md-center mt-4">
            <div class="col-8">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                    @<%= link_to user.username, user %>
                </div>
                <div class="card-body">
                    <p class="card-text"><%= pluralize(user.articles.count, "article") %> </p>
                    <%= link_to 'View Profile', user,  class:"btn btn-outline-success my-2 my-sm-0", id:"search-hover"%>
                    <%= link_to 'Edit profile', edit_user_path(user), class:"btn btn-outline-success my-2 my-sm-0", id:"search-hover"%>
                </div>
                <div class="card-footer text-muted ">
                <small><p>joined <%=time_ago_in_words(user.created_at)%> ago &nbsp; &nbsp; &nbsp;</p></small>
                </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
